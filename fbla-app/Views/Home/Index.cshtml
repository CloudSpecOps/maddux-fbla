@model fbla_app.Models.HomeViewModel

<div class="container-fluid">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12" style="padding-top: 10px">
                        @Html.ActionLink("Create New Community", "Create", "Community")
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <h2>Community(s)</h2>
                    </div>
                    <div class="col-md-6">
                        &nbsp;
                    </div>
                </div>
                @foreach (var item in Model.Communities)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <strong>@Html.DisplayFor(modelItem => item.CommunityName)</strong>
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Edit", "Edit", "Community", new { id = item.Id }, null) |
                            @Html.ActionLink("Details", "Details", "Community",  new { id = item.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", "Community",  new { id = item.Id }, null)
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4">

            </div>
            <div class="col-md-4">

            </div>
        </div>
    </div>
</div>
